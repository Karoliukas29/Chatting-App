<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_gravity="left"
    android:orientation="horizontal"
    android:padding="2dp"
    >

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:gravity="left"

            >

            <TextView
                android:id="@+id/user_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2sp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="11sp"


                android:textStyle="italic" />

            <TextView
                android:id="@+id/message_row_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="6dp"
                android:text="Date and Time"
                android:textColor="@color/black"
                android:textSize="11sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/user_row_email"
            style="@android:style/Widget.Holo.Light.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:fontFamily="sans-serif"
            android:text="MessageText"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="normal"
            android:background="@drawable/rounder_messages_not_my_messages"

            />


    </LinearLayout>


</LinearLayout>